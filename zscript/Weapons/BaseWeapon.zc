			if(self.player.ReadyWeapon.GetClassName() == "PB_SuperGL"){ //Thanks to 7Soul on the ZDoom Forums for posting on getting a selected weapon
				A_SetCurrentGrenadeType("Impact");
				return invoker.A_Jump(256,"SelectAnimation");
				}
